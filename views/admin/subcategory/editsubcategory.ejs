<div class="pcoded-main-container">
    <div class="pcoded-wrapper">
      
        <div class="pcoded-content">
            <!-- Page-header start -->
           
            <!-- Page-header end -->
            <div class="pcoded-inner-content">
                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                      
                        <!-- Page body start -->
                        <div class="page-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>SubCategory</h5>
                                                     </div>
                                        <div class="card-block">
                                            <form class="form-material" action="/admin/update-subcategory/<%= subcategory._id  %>" method="post" >
                                                <div class="form-group form-default">
                                                    <input type="text"  class="form-control" name="name" value="<%= subcategory.name %>" required="">
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Name</label>
                                                </div>
                                                <div class="form-group form-default">
                                                    <input type="text"  class="form-control" value="<%= subcategory.description %>" name="description" required="">
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Description</label>
                                                </div>
                                                <div class="form-group form-default">
                                                   <select name="status" class="form-control" >
                                                    <option value="active"  <%= subcategory.status === 'active' ? 'selected' : '' %>>Active</option>
                                                    <option value="inactive" <%= subcategory.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                                   </select>
                                                    <label class="float-label">Status</label>
                                                </div>


                                                <div class="form-group form-default">
                                                    <select name="category" class="form-control" >
                                                        <% categories.forEach((category) => { %>
                                                     <option value="<%= category._id %>"  <%= subcategory.category && subcategory.category._id.toString() === category._id.toString() ? 'selected' : '' %>> <%= category.name  %></option>
                                                     <% }) %>

                                                    </select>
                                                     <label class="float-label">Category</label>
                                                 </div>
                                               

                                                 <button type="submit" class="btn btn-primary">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                                </div>
                                                <!-- Page body end -->
                                            </div>
                                        </div>
                                        <!-- Main-body end -->
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>