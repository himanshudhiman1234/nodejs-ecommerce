<div class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <div class="page-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Product Form</h5>
                                        </div>
                                        <div class="card-block">
                                            <form class="form-material" action="/admin/update-product/<%= products._id  %>" method="POST" enctype="multipart/form-data">
                                                <!-- Product Name -->
                                                <div class="form-group form-default">
                                                    <input type="text" name="name" class="form-control" value="<%= products.name %>" required>
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Product Name</label>
                                                </div>

                                                <!-- Description -->
                                                <div class="form-group form-default">
                                                    <textarea name="description" class="form-control"    required><%= products.description %></textarea>
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Description</label>
                                                </div>

                                                <!-- Price -->
                                                <div class="form-group form-default">
                                                    <input type="number" name="price" value="<%= products.price %>" class="form-control" required min="0" step="0.01">
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Price</label>
                                                </div>

                                                <!-- Category -->
                                                <div class="form-group form-default">
                                                    <select name="category" class="form-control" required>
                                                        <% categories.forEach((category) => { %>
                                                            <option value="<%= category._id %>"><%= category.name %></option>
                                                        <% }) %>
                                                    </select>
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Category</label>
                                                </div>

                                                <!-- Status -->
                                                <div class="form-group form-default">
                                                    <select name="status" class="form-control" required>
                                                        <option value="active">Active</option>
                                                        <option value="inactive">Inactive</option>
                                                    </select>
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Status</label>
                                                </div>

                                                <!-- Total Product Quantity -->
                                                <div class="form-group form-default">
                                                    <input type="number" name="totalQuantity" value="<%= products.price %>" class="form-control" required min="0">
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Total Product Quantity</label>
                                                </div>

                                                <!-- Images -->
                                                <div class="form-group form-default">
                                                    <% products.images.forEach((image) => { %>
                                                        <img src="/<%= image %>" alt="Product Image" style="width: 50px; height: 50px;">
                                                    <% }) %>
                                                    
                                                    <input type="file" name="images"  class="form-control" multiple>
                                                    <span class="form-bar"></span>
                                                    <label class="float-label">Upload Images</label>
                                                </div>

                                                <!-- Variants -->
                                               <!-- Variants (Simplified Naming) -->
<div class="form-group form-default">
    <input type="text" name="variantColor" value="<%= products.variantColor %>" class="form-control" placeholder="Color">
    <span class="form-bar"></span>
    <label class="float-label">Color</label>
</div>
<div class="form-group form-default">
    <input type="text" name="variantSize" value="<%= products.variantSize %>" class="form-control" placeholder="Size">
    <span class="form-bar"></span>
    <label class="float-label">Size</label>
</div>

                                                

                                                <!-- Submit Button -->
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Page body end -->
                        </div>
                    </div>
                    <!-- Main-body end -->
                </div>
            </div>
        </div>
    </div>
</div>
